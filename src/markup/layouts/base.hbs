<!-- Doctype HTML5 -->
<!doctype html>
<html lang="{{#if language}}{{language}}{{else}}ru{{/if}}" dir="ltr">
{{#block "head"}}
    <head>
        {{#block "meta"}}
            {{> meta}}
        {{/block}}

        {{#block "relationships"}}
            {{> relationships}}
        {{/block}}

        {{#block "title"}}
            <title>{{title}}</title>
        {{/block}}

        {{#block "styles"}}
            {{#each stylesheets}}
                <link href="{{this}}" rel="stylesheet" />
            {{/each}}
        {{/block}}
    </head>
{{/block}}

{{#block "body"}}
    <body class="{{bodyClass}}">
    {{#block "header"}}
        {{> header}}
    {{/block}}

    {{#block "main"}}
    {{/block}}

    {{#block "footer"}}
        {{> footer}}
    {{/block}}

    {{#block "scripts"}}
        {{#each scripts}}
            <script src="{{this}}" type="module"></script>
        {{/each}}
    {{/block}}
    </body>
{{/block}}
</html>
